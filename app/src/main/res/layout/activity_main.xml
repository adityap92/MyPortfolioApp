<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myportfolioapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.myportfolioapp.MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/my_nanodegree_app"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/bMovies"
            style="@style/ButtonTheme"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:text="@string/popular_movies" />

        <Button
            android:id="@+id/bStockHawk"
            style="@style/ButtonTheme"
            android:layout_below="@+id/bMovies"
            android:layout_centerHorizontal="true"
            android:text="@string/stock_hawk" />

        <Button
            android:id="@+id/bBigger"
            style="@style/ButtonTheme"
            android:layout_below="@+id/bStockHawk"
            android:layout_centerHorizontal="true"
            android:text="@string/build_it_bigger" />

        <Button
            android:id="@+id/bMaterial"
            style="@style/ButtonTheme"
            android:layout_below="@+id/bBigger"
            android:layout_centerHorizontal="true"
            android:text="@string/make_it_material" />

        <Button
            android:id="@+id/bUbiquitous"
            style="@style/ButtonTheme"
            android:layout_below="@+id/bMaterial"
            android:layout_centerHorizontal="true"
            android:text="@string/go_ubiquitous" />

        <Button
            android:id="@+id/bCapstone"
            style="@style/ButtonTheme"
            android:text="@string/capstone"
            android:layout_below="@+id/bUbiquitous"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</ScrollView>
